@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @_currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increase</button>
<button class="btn btn-secondary" @onclick="DecrementCount">Decrease</button>
<button class="btn btn-warning" @onclick="ResetCount">Reset</button>

@code {
    private int _currentCount = 0;

    [Parameter] public int IncrementAmount { get; set; } = 1;

    private void IncrementCount()
    {
        _currentCount += IncrementAmount;
    }
    
    private void DecrementCount()
    {
        _currentCount -= IncrementAmount;
    }

    private void ResetCount()
    {
        _currentCount = 0;
    }
}
