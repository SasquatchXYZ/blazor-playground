@using BlazingPizza.Model

@foreach (var pizza in Order.Pizzas)
{
    <p>
        <strong>
            @(pizza.Size)"
            @pizza.Special!.Name
            (£@pizza.GetFormattedTotalPrice())
        </strong>
    </p>
}

<p>
    <strong>
        Total Price:
        £@Order.GetFormattedTotalPrice()
    </strong>
</p>

@code
{
    [Parameter, EditorRequired] public required Order Order { get; set; }
}
